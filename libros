import os
class Libro:
        lib=""

        def consullibro(self):
                
                if os.path.isfile('C:/Users/tomillo/Desktop/spring6/proyectobeta/titulos.txt'):
                        print('El archivo existe.')
                        r = open("titulos.txt", "r")
                        print(r.read())
                else:
                        print('El no archivo existe.')


        def agregarlibros(self):
                self.lib= input("nombre de libro")
                l = open("titulos.txt", "a")
                l.write(self.lib)
                l.close()


