from libros import Libro

class Libreria:
    def __init__(self):
        self.libro1 = Libro()
        self.titulo = input("Introduce Titulo")

    def agregar(self):
        titulo = open('titulos.txt','a')
        titulo.write
        titulo.close()
        
        

    def menu(self):

        while True:
            print("[1] Consultar\t[2] Agregar\t[3] Salir")
            opcion = input("> ")

            if opcion == "1":
                print("esto seria consultar")

            if opcion == "2":
                print("esto seria agregar")

            if opcion == "3":
                nombre = input("Introduce tu nombre\n> ")
                print("Hasta luego", nombre)
                break
